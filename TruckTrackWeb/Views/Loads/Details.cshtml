        <tr>
            <th>
                @Html.DisplayNameFor(modelPallet => Model.Pallets.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelPallet => Model.Pallets.FirstOrDefault().Value)
            </th>
        <th></th>
        </tr>
@foreach (var pallet in Model.Pallets)    {
        <tr>
            <td>
                @Html.DisplayFor(modelPallet => pallet.Name)
            </td>
            <td>
                @Html.DisplayFor(modelPallet => pallet.Value)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Pallets", new { id = pallet.Id }, null)
            </td>
        </tr>
}
    </table>    
</div>

