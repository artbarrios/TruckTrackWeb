@model TruckTrackWeb.Models.Load

@{
    ViewBag.Title = "Details Load";
}

<h2>Load: @Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TruckId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsTimeSensitive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsTimeSensitive)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
