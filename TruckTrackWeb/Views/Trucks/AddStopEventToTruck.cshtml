@model TruckTrackWeb.Models.StopEventTruckViewModel

@{
    ViewBag.Title = "AddStopEventToTruck";
}

<h2>Truck: @Html.DisplayFor(model => model.Truck_Name)</h2>
<h4>Add Stop Event To Truck</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.TruckId)
        @Html.HiddenFor(model => model.Truck_Name)

        @if (((SelectList)ViewBag.StopEventId).Count() > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.StopEvent_Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("StopEventId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.Raw("<b>All available Stop Events have been added to this Truck.</b>")
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to Truck Detail", "Details", new { id = Model.TruckId } )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}