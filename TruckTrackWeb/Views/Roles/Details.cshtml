@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Details Role";
}

@{ var applicationUser = new TruckTrackWeb.Models.ApplicationUser(); }

<h2>Role: @Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<div>
    <hr />
    <h4>
        Users
    </h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(modelUser => applicationUser.UserName)
            </th>
        </tr>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>
                    @Html.Raw(user.UserName)
                </td>
            </tr>
        }
    </table>
</div>
