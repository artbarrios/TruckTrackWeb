</p>
<div>
    <hr />
    <h4>
        Trucks
        &nbsp&nbsp&nbsp
        <small>@Html.ActionLink("Add Truck To Stop Event", "AddTruckToStopEvent", "StopEvents", new { id = Model.Id }, null)</small>
    </h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(modelTruck => Model.Trucks.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelTruck => Model.Trucks.FirstOrDefault().TagNumber)
            </th>
            <th>
                @Html.DisplayNameFor(modelTruck => Model.Trucks.FirstOrDefault().DatePurchased)
            </th>
            <th>
                @Html.DisplayNameFor(modelTruck => Model.Trucks.FirstOrDefault().VehicleTypeId)
            </th>
        <th></th>
        </tr>
@foreach (var truck in Model.Trucks)    {
        <tr>
            <td>
                @Html.DisplayFor(modelTruck => truck.Name)
            </td>
            <td>
                @Html.DisplayFor(modelTruck => truck.TagNumber)
            </td>
            <td>
                @Html.DisplayFor(modelTruck => truck.DatePurchased)
            </td>
            <td>
                @Html.DisplayFor(modelTruck => truck.VehicleType.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Trucks", new { id = truck.Id }, null)
 |
                @Html.ActionLink("Remove from List", "RemoveTruckFromStopEvent", "StopEvents", new { stopEventId = Model.Id, truckId = truck.Id }, null )
            </td>
        </tr>
}
    </table>    
</div>

